<% include ./layout/top.ejs %>

    <div class="breadcrumbs breadcrumb-two-thirds">
        <ol>
            <li><a href="/">Home</a></li>
            <li>Export Green List Waste</li>
        </ol>
    </div>

    <div class="grid-row">
        <div class="column-full">
            <% if (!claims) { %>
            <div class="error-summary" role="alert" aria-labelledby="error-summary-heading-example-1" tabindex="-1">

                <h1 class="heading-medium error-summary-heading" id="error-summary-heading-example-1">
                    Sorry, you need to be logged in to access this page
                </h1>

                <p>
                    This page is only available to our logged in users.
                </p>

                <ul class="error-summary-list">
                    <li><a href="<%= idm.generateAuthenticationUrl('/account') %>">Click here to log in or create an
                            account</a>
                    </li>
                </ul>

            </div>

            <% if (!trulyPrivate) { %>
            <div class="panel panel-border-wide">
                <h3 class="heading-medium">Please note</h3>
                <p>Although you cannot view the content on this page, you can still access the page itself. <a
                            href="/account-private">Click here</a> to go to a page you are not allowed to access at all,
                    without being authenticated</p>
            </div>
            <% } %>
            <% } else { %>
            <h3 class="heading-large">Welcome <%= `${claims.firstName}` %></h3>
            <br>
            <p>
                you are entering the Waste Tracking Service on behalf of company : <%- `${company}` %>
            </p>
            <br>
            <p>
                and you have the role : <%- `${role}` %>
            </p>
            <% } %>
        </div>
    </div>
<% include ./layout/bottom.ejs %>
